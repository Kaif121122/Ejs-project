<%- include("header") -%>

    <h1>Home</h1>

    <p>
        <%= para %>
    </p>
    <% posts.forEach((item)=>{ %>
        <h1>
            <%= item.title %>
        </h1>
        <p>
            <% if(item.post.length<100){ %>
                <%= item.post%>

                    <% }else{%>
                        <%= item.post.substring(0,100)+" ..." %>

                            <a href="/posts/<%= item._id %>">Read More</a>
                            <% } %>

        </p>
        <% }) %>

            <%- include("footer") -%>